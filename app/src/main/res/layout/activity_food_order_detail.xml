<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.efithealth.app.activity.FoodOrderDetailActivity">

    <include layout="@layout/common_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sz_4"
            android:layout_marginLeft="@dimen/sz_8"
            android:layout_marginRight="@dimen/sz_8"
            android:layout_marginTop="@dimen/sz_10"
            android:background="@color/white"
            app:cardCornerRadius="@dimen/sz_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sz_10"
                android:layout_marginRight="@dimen/sz_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/sz_40"
                    android:layout_gravity="right|center_vertical"
                    android:gravity="center"
                    android:text="已完成"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/sz_20"/>

                <View
                    style="@style/GrayLine"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sz_40">

                    <TextView
                        android:id="@+id/tv_food_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="减肥餐："
                        android:textColor="@color/colorTextThird"
                        android:textSize="@dimen/sz_16"/>

                    <TextView
                        android:id="@+id/tv_food_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="X1"
                        android:textColor="@color/colorTextThird"
                        android:textSize="@dimen/sz_16"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sz_40">

                    <TextView
                        android:id="@+id/tv_order_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="下单时间："
                        android:textColor="@color/colorTextThird"
                        android:textSize="@dimen/sz_16"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="2015-12-25 13：50"
                        android:textColor="@color/colorTextThird"
                        android:textSize="@dimen/sz_16"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sz_40">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="配送方式："
                        android:textColor="@color/colorTextThird"
                        android:textSize="@dimen/sz_16"/>

                    <TextView
                        android:id="@+id/tv_dispatch_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="快递配送"
                        android:textColor="@color/colorTextThird"
                        android:textSize="@dimen/sz_16"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/sz_8"
                    android:paddingTop="@dimen/sz_8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收货地址："
                        android:textColor="@color/colorTextThird"
                        android:textSize="@dimen/sz_16"
                        />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/sz_10"
                        android:text="收货地址dksajfklsjdahfkljsdahfkljsdhhsdkjhfshkjsdaasjfhkdshshfkhfh："
                        android:textColor="@color/colorTextThird"
                        android:textSize="@dimen/sz_16"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sz_40">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="收货人姓名："
                        android:textColor="@color/colorTextThird"
                        android:textSize="@dimen/sz_16"/>

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="王武"
                        android:textColor="@color/colorTextThird"
                        android:textSize="@dimen/sz_16"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sz_40">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="收货人电话："
                        android:textColor="@color/colorTextThird"
                        android:textSize="@dimen/sz_16"/>

                    <TextView
                        android:id="@+id/tv_phone_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="12345678912"
                        android:textColor="@color/colorTextThird"
                        android:textSize="@dimen/sz_16"/>
                </RelativeLayout>

                <View
                    style="@style/GrayLine"/>

                <RelativeLayout
                    android:id="@+id/ly_dispatch_detail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sz_60"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="@dimen/sz_16"
                        android:text="下次配送:"
                        android:layout_centerVertical="true"

                        />

                    <ImageView
                        android:id="@+id/iv_arrow"
                        android:layout_width="@dimen/sz_20"
                        android:layout_height="@dimen/sz_20"
                        android:src="@mipmap/ic_arrow_right"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
                    <TextView
                        android:id="@+id/tv_dispatch_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="2016-08-24 星期三 午餐"
                        android:layout_toLeftOf="@id/iv_arrow"
                        android:textSize="@dimen/sz_16"
                        android:textColor="@color/colorTextSecondary"
                        android:layout_marginRight="@dimen/sz_10"/>
                </RelativeLayout>

                <View
                    style="@style/GrayLine"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sz_60"
        android:layout_gravity="bottom"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_again"
            android:layout_width="@dimen/sz_100"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/sz_20"
            android:background="@drawable/bg_food_order_select"
            android:gravity="center"
            android:padding="@dimen/sz_10"
            android:text="再来一单"
            android:textColor="@color/white"
            android:textSize="@dimen/sz_16"/>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
